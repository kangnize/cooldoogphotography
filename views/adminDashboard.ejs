    <h1>Booking Details</h1>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Service</th>
            <th>Booking Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach((booking) => { %>
          <tr>
            <td><%= booking.id %></td>
            <td><%= booking.name %></td>
            <td><%= booking.email %></td>
            <td><%= booking.phone %></td>
            <td><%= booking.service %></td>
            <td><%= booking.booking_date %></td>
            <td>
              <input
                type="checkbox"
                <% if (new Date(booking.booking_date) < new Date()) { %> checked <% } %>
                disabled />
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Add these Bootstrap JS and jQuery scripts at the end of the body for the toggle to work -->
